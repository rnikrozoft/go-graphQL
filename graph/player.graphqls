type Player {
 id: ID!
 name: String!
 level: Int!
 class: PlayerClass
 items: [Item!]!
}

enum PlayerClass {
  WARRIOR
  MAGE
  ASSASSIN
}

type Item {
  id: ID!
  name: String!
}

type Query {
  getPlayers: [Player!]!
  getMonster: [Monster!]!
}

input NewPlayer {
  name: String!
  class: PlayerClass
}

type Mutation {
  createPlayer(req: NewPlayer!): Player!
}